<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.test.hibernate.xml.pojo.mapping.collection.bag.Employee"
		table="EMPLOYEE_BAG">
		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="firstName" type="string" column="first_name" />
		<property name="lastName" type="string" column="last_name" />
		<property name="salary" type="int" column="salary" />

		<bag name="certificates" cascade="all">
			<key column="employee_id" />
			<one-to-many
				class="com.test.hibernate.xml.pojo.mapping.collection.bag.Certificate" />
		</bag>

	</class>


	<class
		name="com.test.hibernate.xml.pojo.mapping.collection.bag.Certificate"
		table="CERTIFICATE_BAG">
		<meta attribute="class-description">
			This class contains the certificate details.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="name" type="string" column="certificate_name" />
	</class>

</hibernate-mapping>