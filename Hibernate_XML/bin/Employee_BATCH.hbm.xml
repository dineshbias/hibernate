<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.test.hibernate.xml.pojo.batch.entity.EmployeeB"
		table="EMPLOYEE_BATCH">
		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="firstName" type="string" column="first_name" />
		<property name="lastName" type="string" column="last_name" />
		<property name="salary" type="int" column="salary" />
		<property name="streetName" type="string" column="street_name" />
		<property name="cityName" type="string" column="city_name" />
		<property name="stateName" type="string" column="state_name" />
		<property name="zipcode" type="string" column="zipcode" />

	</class>

	<query name="getAllEmployeeBs">
			<![CDATA[from EmployeeB]]>
	</query>

	<query name="findEmployeeByName">  
			<![CDATA[from EmployeeB e where e.firstName = :name]]>
	</query>


</hibernate-mapping>